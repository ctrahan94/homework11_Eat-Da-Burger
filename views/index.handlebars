<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-4">
      <h2>Burgers you can eat</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4">
    </div>


    <div class="col-4">
      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
    </div>

    <div class="col-4">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add a burger</button>
      </form>
    </div>

    <div class="col-4">
    </div>
  </div>
</div>
